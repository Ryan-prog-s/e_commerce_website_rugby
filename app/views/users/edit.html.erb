<!-- app/views/users/edit.html.erb -->
<h1>Edit Profile</h1>
<%= form_with model: @user, url: user_path, method: :patch do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>
  <div>
    <%= form.submit 'Update Profile' %>
  </div>
<% end %>

<% if current_user.buyer.nil? %>
  <%= button_to 'Become a Buyer', become_buyer_path, method: :post %>
<% end %>
<% if current_user.seller.nil? %>
  <%= button_to 'Become a Seller', become_seller_path, method: :post %>
<% end %>
