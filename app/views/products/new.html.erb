<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center mb-4">New Product</h1>
      <%= form_with model: @product, url: products_path do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control', placeholder: 'Enter product name' %>
        </div>
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: 'form-control', placeholder: 'Enter product description' %>
        </div>
        <div class="form-group">
          <%= form.label :price %>
          <%= form.number_field :price, class: 'form-control', step: 0.01, placeholder: 'Enter product price' %>
        </div>
        <div class="form-group">
          <%= form.label :stock %>
          <%= form.number_field :stock, class: 'form-control', placeholder: 'Enter product stock' %>
        </div>
        <div class="text-center">
          <%= form.submit 'Create Product', class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
